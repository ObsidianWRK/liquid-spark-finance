{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview -- --port 9001",
      "startServerReadyPattern": "Local:   http://localhost:9001",
      "startServerReadyTimeout": 30000,
      "url": [
        "http://localhost:9001/",
        "http://localhost:9001/accounts",
        "http://localhost:9001/transactions", 
        "http://localhost:9001/insights",
        "http://localhost:9001/calculators",
        "http://localhost:9001/savings"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "chromeFlags": [
          "--headless",
          "--no-sandbox",
          "--disable-dev-shm-usage",
          "--disable-web-security"
        ],
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 0,
          "uploadThroughputKbps": 0,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}], 
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:seo": ["error", {"minScore": 0.8}],
        
        "first-contentful-paint": ["error", {"maxNumericValue": 1500}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.05}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "interactive": ["error", {"maxNumericValue": 3000}],
        
        "unused-javascript": ["warn", {"maxNumericValue": 200000}],
        "unused-css-rules": ["warn", {"maxNumericValue": 50000}],
        "render-blocking-resources": ["warn", {"maxNumericValue": 100}],
        "unminified-javascript": ["error", {"maxNumericValue": 0}],
        "unminified-css": ["error", {"maxNumericValue": 0}],
        
        "resource-summary:script:size": ["error", {"maxNumericValue": 2200000}],
        "resource-summary:stylesheet:size": ["error", {"maxNumericValue": 300000}],
        "resource-summary:total:size": ["error", {"maxNumericValue": 3000000}],
        
        "modern-image-formats": ["warn", {"minScore": 0.8}],
        "efficient-animated-content": ["warn", {"minScore": 0.8}],
        "uses-webp-images": ["warn", {"minScore": 0.8}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "port": 9090,
      "storage": "./lighthouse-results"
    }
  }
} 