# Vueni Financial Platform - Environment Variables
# Copy this file to .env.local and fill in the values

# Vueni Encryption & Security
VITE_VUENI_ENCRYPTION_KEY=your-vueni-encryption-key-here
VITE_VUENI_API_URL=https://your-vueni-domain.vercel.app/api
VITE_VUENI_ANALYTICS_ID=your-analytics-id-here

# Vercel Environment
VERCEL_URL=your-domain.vercel.app
VERCEL_ENV=production

# Feature Flags
VITE_VUENI_ENABLE_PERFORMANCE_MONITORING=true
VITE_VUENI_ENABLE_DEBUG_MODE=false
VITE_VUENI_ENABLE_ANALYTICS=true

# Performance Settings
VITE_VUENI_CACHE_TTL=1800000
VITE_VUENI_MAX_CACHE_SIZE=104857600
VITE_VUENI_ENABLE_COMPRESSION=true

# Security Settings
VITE_VUENI_SESSION_TIMEOUT=1800000
VITE_VUENI_CSRF_PROTECTION=true
VITE_VUENI_SECURE_COOKIES=true

# Development Settings (remove in production)
VITE_VUENI_DEV_TOOLS=false
VITE_VUENI_MOCK_DATA=false